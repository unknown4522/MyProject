<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Your website description">
    <meta name="author" content="Your Name">
    <meta name="keywords" content="keywords, for, SEO">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <!-- CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/Content/gsc-logo.png" style="height: 50px;" />
                   
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown topright">
                            <a class="nav-link dropdown-toggle hover-scale" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/Content/profile-circle-icon-512x512-zxne30hp.png" alt="Profile Picture" style="height: 30px;" class="topright">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("UserProfile", "Inventory")">Profile</a></li>
                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("Login", "Inventory")">Log out</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container body-content">
        @RenderBody()
    </main>

    <footer>
        <hr>
        <!-- Footer content here -->
    </footer>

    <!-- JavaScript -->
   
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
   
   
</body>
</html>
